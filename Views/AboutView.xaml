<UserControl
    x:Class="ollez.Views.AboutView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Storyboard x:Key="FadeInStoryboard">
            <DoubleAnimation
                Storyboard.TargetProperty="Opacity"
                From="0"
                To="1"
                Duration="0:0:1" />
        </Storyboard>
    </UserControl.Resources>

    <Grid Margin="20">
        <materialDesign:Card
            MaxWidth="600"
            Padding="32"
            Background="{DynamicResource MaterialDesignBackground}"
            materialDesign:ElevationAssist.Elevation="Dp3"
            UniformCornerRadius="15"
            VerticalAlignment="Center">
            <StackPanel Opacity="0">
                <StackPanel.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard Storyboard="{StaticResource FadeInStoryboard}" />
                    </EventTrigger>
                </StackPanel.Triggers>

                <Image
                    Width="120"
                    Height="120"
                    Margin="0,0,0,24"
                    RenderOptions.BitmapScalingMode="HighQuality"
                    Source="/Resources/logo.png">
                    <Image.Effect>
                        <DropShadowEffect
                            BlurRadius="15"
                            Direction="270"
                            Opacity="0.2"
                            ShadowDepth="5" />
                    </Image.Effect>
                </Image>

                <TextBlock
                    Margin="0,0,0,32"
                    HorizontalAlignment="Center"
                    FontWeight="Bold"
                    Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                    Text="Olez工具">
                    <TextBlock.Effect>
                        <DropShadowEffect
                            BlurRadius="20"
                            Direction="270"
                            Opacity="0.2"
                            ShadowDepth="2" />
                    </TextBlock.Effect>
                </TextBlock>

                <StackPanel Margin="0,0,0,16">
                    <TextBlock
                        Margin="0,0,0,8"
                        FontWeight="Medium"
                        Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                        Text="版本" />
                    <TextBlock Style="{StaticResource MaterialDesignBody1TextBlock}">
                        <Run Text="{Binding Version}" />
                    </TextBlock>
                </StackPanel>

                <StackPanel Margin="0,0,0,16">
                    <TextBlock
                        Margin="0,0,0,8"
                        FontWeight="Medium"
                        Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                        Text="创建者" />
                    <TextBlock Style="{StaticResource MaterialDesignBody1TextBlock}">
                        <Run Text="{Binding Creator}" />
                    </TextBlock>
                </StackPanel>

                <StackPanel Margin="0,0,0,16">
                    <TextBlock
                        Margin="0,0,0,8"
                        FontWeight="Medium"
                        Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                        Text="联系方式" />
                    <TextBox
                        materialDesign:HintAssist.Hint="电子邮箱"
                        materialDesign:TextFieldAssist.HasClearButton="False"
                        materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource PrimaryHueMidBrush}"
                        IsReadOnly="True"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Text="{Binding Email, Mode=OneWay}" />
                </StackPanel>

                <Separator
                    Margin="0,24"
                    Background="{DynamicResource MaterialDesignDivider}"
                    Style="{StaticResource MaterialDesignLightSeparator}" />

                <TextBlock
                    Margin="0,8,0,0"
                    HorizontalAlignment="Center"
                    Foreground="{DynamicResource MaterialDesignBodyLight}"
                    Style="{StaticResource MaterialDesignCaptionTextBlock}"
                    Text="{Binding Copyright}" />
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</UserControl>