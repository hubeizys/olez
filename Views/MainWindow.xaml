<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="ollez.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:prism="http://prismlibrary.com/"
    Title="系统检查工具"
    Width="1000"
    Height="700"
    prism:ViewModelLocator.AutoWireViewModel="True"
    AllowsTransparency="True"
    Background="Transparent"
    FontFamily="{DynamicResource MaterialDesignFont}"
    MouseLeftButtonDown="Window_MouseLeftButtonDown"
    TextElement.FontSize="13"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">


    <!--<materialDesign:DialogHost.DialogContent>
    -->
    <!--  对话框内容将在运行时动态设置  -->
    <!--
        </materialDesign:DialogHost.DialogContent>-->

    <materialDesign:Card UniformCornerRadius="15">
        <materialDesign:DialogHost Identifier="RootDialog" DialogTheme="Inherit" CloseOnClickAway="False">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />

                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  自定义标题栏  -->
                <Grid Grid.Row="0" Background="{DynamicResource PrimaryHueMidBrush}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!--  标题和导航区域  -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <materialDesign:PackIcon
                            Width="24"
                            Height="24"
                            Margin="16,0,8,0"
                            VerticalAlignment="Center"
                            Foreground="White"
                            Kind="Robot" />

                        <TextBlock
                            Margin="0,16"
                            VerticalAlignment="Center"
                            Foreground="White"
                            Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                            Text="Ollez 助手" />
                    </StackPanel>

                    <!--  导航按钮  -->
                    <StackPanel
                        Grid.Column="1"
                        Margin="32,0,0,0"
                        Orientation="Horizontal">
                        <RadioButton
                            Margin="4"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="SystemStatusView"
                            Content="系统状态"
                            Foreground="White"
                            IsChecked="True"
                            Style="{StaticResource MaterialDesignTabRadioButton}" />

                        <RadioButton
                            Margin="4"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="ChatView"
                            Content="聊天"
                            Foreground="White"
                            Style="{StaticResource MaterialDesignTabRadioButton}" />

                        <RadioButton
                            Margin="4"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="LogView"
                            Content="系统日志"
                            Foreground="White"
                            Style="{StaticResource MaterialDesignTabRadioButton}" />

                        <RadioButton
                            Margin="4"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="AboutView"
                            Content="关于"
                            Foreground="White"
                            Style="{StaticResource MaterialDesignTabRadioButton}" />
                    </StackPanel>

                    <!--  窗口控制按钮  -->
                    <StackPanel
                        Grid.Column="2"
                        Margin="0,0,8,0"
                        Orientation="Horizontal">
                        <Button
                            Width="34"
                            Height="34"
                            Padding="0"
                            Click="MinimizeButton_Click"
                            Foreground="White"
                            Style="{StaticResource MaterialDesignFlatButton}">
                            <materialDesign:PackIcon Kind="WindowMinimize" />
                        </Button>

                        <Button
                            Width="34"
                            Height="34"
                            Padding="0"
                            Click="MaximizeButton_Click"
                            Foreground="White"
                            Style="{StaticResource MaterialDesignFlatButton}">
                            <materialDesign:PackIcon Kind="WindowMaximize" />
                        </Button>

                        <Button
                            Width="34"
                            Height="34"
                            Padding="0"
                            Click="CloseButton_Click"
                            Foreground="White"
                            Style="{StaticResource MaterialDesignFlatButton}">
                            <materialDesign:PackIcon Kind="Close" />
                        </Button>
                    </StackPanel>
                </Grid>

                <!--  内容区域  -->
                <ContentControl
                    Grid.Row="1"
                    Margin="16"
                    prism:RegionManager.RegionName="ContentRegion" />

            </Grid>
        </materialDesign:DialogHost>
    </materialDesign:Card>

</Window> 