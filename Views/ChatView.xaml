<UserControl
    x:Class="ollez.Views.ChatView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:prism="http://prismlibrary.com/"
    prism:ViewModelLocator.AutoWireViewModel="True">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <TextBlock
            Style="{StaticResource MaterialDesignHeadline5TextBlock}"
            Text="Ollama 聊天"
            Margin="0,0,0,16"/>

        <!-- 聊天记录 -->
        <ScrollViewer Grid.Row="1" x:Name="ChatScrollViewer">
            <ItemsControl ItemsSource="{Binding Messages}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <materialDesign:Card Margin="0,8" UniformCornerRadius="8">
                            <Grid Margin="16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- 用户图标 -->
                                <materialDesign:PackIcon
                                    Kind="{Binding IsUser, Converter={StaticResource MessageIconConverter}}"
                                    Width="24"
                                    Height="24"
                                    Margin="0,0,16,0"
                                    VerticalAlignment="Top"/>

                                <!-- 消息内容 -->
                                <TextBlock
                                    Grid.Column="1"
                                    Text="{Binding Content}"
                                    TextWrapping="Wrap"
                                    Style="{StaticResource MaterialDesignBody1TextBlock}"/>
                            </Grid>
                        </materialDesign:Card>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- 输入区域 -->
        <Grid Grid.Row="2" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox
                x:Name="MessageInput"
                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                materialDesign:HintAssist.Hint="输入消息..."
                Text="{Binding InputMessage, UpdateSourceTrigger=PropertyChanged}"
                KeyDown="MessageInput_KeyDown"
                Margin="0,0,16,0"/>

            <Button
                Grid.Column="1"
                Command="{Binding SendMessageCommand}"
                Style="{StaticResource MaterialDesignFloatingActionButton}">
                <materialDesign:PackIcon Kind="Send"/>
            </Button>
        </Grid>

        <!-- 加载指示器 -->
        <materialDesign:Card
            Grid.Row="0"
            Grid.RowSpan="3"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Padding="16"
            Visibility="{Binding IsProcessing, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel>
                <ProgressBar
                    IsIndeterminate="True"
                    Style="{StaticResource MaterialDesignCircularProgressBar}"
                    Value="0"/>
                <TextBlock
                    Margin="0,8,0,0"
                    HorizontalAlignment="Center"
                    Text="正在思考..."/>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</UserControl> 