<UserControl
    x:Class="ollez.Views.ChatView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:prism="http://prismlibrary.com/"
    prism:ViewModelLocator.AutoWireViewModel="True">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock
                Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                Text="Ollama 聊天"
                Margin="0,0,0,16"/>

            <!-- 模型选择 -->
            <DockPanel>
                <Button
                    DockPanel.Dock="Right"
                    Margin="8,0,0,0"
                    Command="{Binding RefreshModelsCommand}"
                    Style="{StaticResource MaterialDesignOutlinedButton}">
                    <materialDesign:PackIcon Kind="Refresh"/>
                </Button>
                <ComboBox
                    materialDesign:HintAssist.Hint="选择模型"
                    Style="{StaticResource MaterialDesignOutlinedComboBox}"
                    ItemsSource="{Binding AvailableModels}"
                    SelectedItem="{Binding SelectedModel}"/>
            </DockPanel>
        </StackPanel>

        <!-- 聊天记录 -->
        <ScrollViewer Grid.Row="1" 
                     x:Name="ChatScrollViewer"
                     ScrollChanged="ChatScrollViewer_ScrollChanged">
            <ItemsControl ItemsSource="{Binding Messages}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <materialDesign:Card Margin="0,8" UniformCornerRadius="8">
                            <Grid Margin="16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- 用户图标 -->
                                <materialDesign:PackIcon
                                    Kind="{Binding IsUser, Converter={StaticResource MessageIconConverter}}"
                                    Width="24"
                                    Height="24"
                                    Margin="0,0,16,0"
                                    VerticalAlignment="Top"/>

                                <!-- 消息内容 -->
                                <TextBlock
                                    Grid.Column="1"
                                    Text="{Binding Content, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    TextWrapping="Wrap"
                                    Style="{StaticResource MaterialDesignBody1TextBlock}"/>
                            </Grid>
                        </materialDesign:Card>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- 输入区域 -->
        <Grid Grid.Row="2" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox
                x:Name="MessageInput"
                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                materialDesign:HintAssist.Hint="输入消息..."
                Text="{Binding InputMessage, UpdateSourceTrigger=PropertyChanged}"
                KeyDown="MessageInput_KeyDown"
                Margin="0,0,16,0"/>

            <Button
                Grid.Column="1"
                Command="{Binding SendMessageCommand}"
                Style="{StaticResource MaterialDesignFloatingActionButton}">
                <materialDesign:PackIcon Kind="Send"/>
            </Button>
        </Grid>

        <!-- 加载指示器 -->
        <Border
            Grid.Row="2"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Margin="0,0,80,0"
            Background="{DynamicResource MaterialDesignPaper}"
            CornerRadius="4"
            Padding="8"
            Visibility="{Binding IsProcessing, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel Orientation="Horizontal">
                <ProgressBar
                    IsIndeterminate="True"
                    Style="{StaticResource MaterialDesignCircularProgressBar}"
                    Width="20"
                    Height="20"
                    Margin="0,0,8,0"
                    Value="0"/>
                <TextBlock
                    VerticalAlignment="Center"
                    Text="正在思考..."/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>